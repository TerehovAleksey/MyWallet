<?xml version="1.0" encoding="utf-8" ?>
<base:PageBase
    x:Class="MyWallet.Client.Views.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:MyWallet.Client.Views.Base"
    xmlns:controls="clr-namespace:MyWallet.Client.ViewControls"
    xmlns:vm="clr-namespace:MyWallet.Client.ViewModels"
    xmlns:widgets="clr-namespace:MyWallet.Client.ViewControls.Widgets"
    x:DataType="vm:MainPageViewModel"
    DisplayMode="NavigationBar"
    PageMode="Menu"
    PageTitle="{Binding Title}">

    <base:PageBase.PageIcons>

        <ImageButton
            Command="{Binding OpenNotificationsPageCommand}"
            Source="notifications.png"
            Style="{StaticResource IconButtonStyle}" />

    </base:PageBase.PageIcons>

    <base:PageBase.PageContent>

        <Grid>
            <ScrollView>
                <VerticalStackLayout
                    Margin="0"
                    Padding="0"
                    HorizontalOptions="FillAndExpand"
                    Spacing="10"
                    VerticalOptions="Start">
                    <controls:MainAccounts />
                    <widgets:WidgetContainer BindingContext="{Binding Widgets}" />
                </VerticalStackLayout>
            </ScrollView>
            <Button Command="{Binding OpenRecordPageCommand}" Style="{StaticResource FabButtonStyle}" />
        </Grid>

    </base:PageBase.PageContent>

</base:PageBase>
