<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="PageNotificationImageBorder" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundCardColor}" />
        <Setter Property="HeightRequest" Value="160" />
        <Setter Property="WidthRequest" Value="160" />
        <Setter Property="StrokeShape" Value="RoundRectangle 80" />
    </Style>

    <Style x:Key="CardStyle" TargetType="Border">
        <Setter Property="Margin" Value="10,0" />
        <Setter Property="Padding" Value="5,0,5,5" />
        <Setter Property="BackgroundColor" Value="{DynamicResource BackgroundCardColor}" />
        <Setter Property="Stroke" Value="{DynamicResource GrayDarkColor}" />
        <Setter Property="StrokeShape" Value="RoundRectangle 5" />
        <Setter Property="StrokeThickness" Value=".5" />
    </Style>

</ResourceDictionary>