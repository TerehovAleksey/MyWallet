<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyWallet.Client.Pages.CategoryPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Категории">

    <Grid>
        <ActivityIndicator
            x:Name="Loader"
            HorizontalOptions="Center"
            IsRunning="False"
            VerticalOptions="Center" />
        <TableView Margin="5,0">
            <TableRoot>
                <TableSection x:Name="TableSection" />
            </TableRoot>
        </TableView>
        <Button
            x:Name="fabBtn"
            Margin="0,0,20,20"
            Clicked="fabBtn_Clicked"
            CornerRadius="30"
            FontSize="30"
            HeightRequest="60"
            HorizontalOptions="End"
            Text="+"
            VerticalOptions="End"
            WidthRequest="60" />
    </Grid>

</ContentPage>