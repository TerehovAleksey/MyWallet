<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="MyWallet.Client.ViewControls.Common.ErrorIndicator"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:res="clr-namespace:MyWallet.Client.Resources"
    BackgroundColor="{DynamicResource BackgroundColor}"
    HorizontalOptions="Fill"
    IsVisible="False"
    VerticalOptions="Fill">

    <VerticalStackLayout
        Padding="48,12"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <Border Style="{DynamicResource PageNotificationImageBorder}">
            <Image x:Name="ErrorIcon" Style="{DynamicResource PageNotificationImage}" />
        </Border>

        <Label
            Margin="0,12,0,0"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            Style="{DynamicResource Medium}"
            Text="{x:Static res:Strings.ErrorMessageTitle}" />

        <Label
            x:Name="ErrorTextLabel"
            FontSize="14"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            LineBreakMode="WordWrap" />

        <Button
            x:Name="RefreshButton"
            Margin="0,20,0,0"
            Clicked="RefreshButton_Clicked"
            Style="{DynamicResource AccentButton}"
            Text="{x:Static res:Strings.GoBack}"
            WidthRequest="140" />
    </VerticalStackLayout>

</Grid>
