<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    x:Class="MyWallet.Client.ViewControls.Common.InputText"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:MyWallet.Client.ViewControls.Common"
    x:DataType="common:InputText">

    <Label x:Name="TitleLabel" Style="{DynamicResource InputCaption}" />
    <Entry
        x:Name="Entry"
        ClearButtonVisibility="WhileEditing"
        PlaceholderColor="{StaticResource TextGrayColor}"
        TextChanged="Entry_TextChanged"
        TextColor="{StaticResource TextDarkColor}" />
    <Grid
        x:Name="ErrorFooter"
        Padding="5,0"
        IsVisible="false">
        <Label
            x:Name="ErrorLabel"
            HorizontalOptions="Start"
            Text="Пожалуйста, заполните название счёта" />
        <Label HorizontalOptions="End" Text="!" />
    </Grid>
</VerticalStackLayout>
