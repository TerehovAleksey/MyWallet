<?xml version="1.0" encoding="utf-8" ?>
<VerticalStackLayout
    x:Class="MyWallet.Client.ViewControls.Dialog.WidgetSettingsDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:res="clr-namespace:MyWallet.Client.Resources"
    BackgroundColor="{DynamicResource BackgroundCardColor}"
    Spacing="20">

    <VerticalStackLayout
        Padding="0"
        BackgroundColor="{DynamicResource BackgroundCardColor}"
        HorizontalOptions="Fill">
        <Label Style="{StaticResource InputCaption}" Text="{x:Static res:Strings.SelectPeriod}" />
        <Picker x:Name="TimePeriodPicker" SelectedIndexChanged="TimePeriodPicker_SelectedIndexChanged" />
    </VerticalStackLayout>

    <VerticalStackLayout
        Padding="0"
        BackgroundColor="{DynamicResource BackgroundCardColor}"
        HorizontalOptions="Fill">
        <Label Style="{StaticResource InputCaption}" Text="{x:Static res:Strings.Filter}" />
        <Picker x:Name="FilterPicker" />
    </VerticalStackLayout>

</VerticalStackLayout>
