<?xml version="1.0" encoding="utf-8" ?>

<VerticalStackLayout
    x:Class="MyWallet.Client.ViewControls.Dialog.InputDialog"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:common="clr-namespace:MyWallet.Client.ViewControls.Common"
    xmlns:local="clr-namespace:MyWallet.Client.ViewControls.Dialog"
    x:DataType="local:InputDialog"
    BackgroundColor="{DynamicResource BackgroundCardColor}"
    MinimumHeightRequest="60">

    <common:InputText x:Name="InputText" Value="{Binding Value}" />

</VerticalStackLayout>