<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="MyWallet.Client.Controls.Card"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this">
    <ContentView.ControlTemplate>
        <ControlTemplate>
            <Frame
                Margin="5"
                Padding="10"
                CornerRadius="10">
                <VerticalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        Text="{TemplateBinding CardTitle}" />
                    <ContentPresenter Margin="0,10" />
                </VerticalStackLayout>
            </Frame>
        </ControlTemplate>
    </ContentView.ControlTemplate>
</ContentView>
